#!/bin/sh
# Nico Schottelius
# cinit: add standard sub-configuration directories to init wants
# Date: 2005-10-11
# 

set -e

. $(dirname $0)/cinit-conf.read-conf

$(dirname $0)/cinit-conf.svc.dependency.add init wants getty
$(dirname $0)/cinit-conf.svc.dependency.add init wants local-services
$(dirname $0)/cinit-conf.svc.dependency.add init wants local-tuning
$(dirname $0)/cinit-conf.svc.dependency.add init wants mount
$(dirname $0)/cinit-conf.svc.dependency.add init wants network
