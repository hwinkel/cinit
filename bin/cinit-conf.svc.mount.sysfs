#
# Mount sysfs
#


. $(dirname $0)/cinit-conf.read-conf

set -e

SVCDIR="${DESTDIR}/${CINIT_DIR}/mount/sys/"

# - mount /sys
"$INSTALL_PROG"      "$INSTALL_DIRECTORY" "${SVCDIR}"
ln -sf /bin/mount    "${SVCDIR}${C_ON}"
echo sysfs       >   "${SVCDIR}${C_ON}${C_PARAMS}"
echo -t         >>   "${SVCDIR}${C_ON}${C_PARAMS}"
echo sysfs      >>   "${SVCDIR}${C_ON}${C_PARAMS}"
echo /sys       >>   "${SVCDIR}${C_ON}${C_PARAMS}"

exit 0
